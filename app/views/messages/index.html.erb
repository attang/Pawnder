<div class="container">
  <div class="row">
    <h3>Messages</h3>
      <table class="table">
        <tbody>
          <% @messages.each do |message| %>

            <tr>
              <% if message.to == current_user.id %>
                <div class="message-box">
                  <div id="from">
                    From: <%= User.find(message.from).name %>
                    <div id="date"> 
                    <%= message.date %>
                    </div>
                  </div>

                  <div id="message">
                    <%= message.message %>
                  </div>
                    <button type="button" class="btn btn-primary">Reply</button>
                </div>
              <%end%>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>